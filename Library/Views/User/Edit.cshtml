@model Library.Models.Domain.User

@{
    Layout = "_LayoutDashboard";
}

<di v class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar usuario</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="UpdateUser" method="post">

                    <input asp-for="Pk_user_id" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" required />

                    </div>


                    <div class="form-group">
                        <label asp-for="User_name" class="control-label"></label>
                        <input asp-for="User_name" class="form-control" placeholder="Ingresa el usuario" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" required />

                    </div>

                    <div class="form-group">
                        <label class="control-label"> Rol</label>
                        <select asp-for="Fk_rol_id" asp-items="ViewBag.Roles" class="select2-placeholder-multiple form-control">
                            <option value="">-- Selecciona --</option>
                        </select>
                    </div>


                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>


                </form>

                <a asp-controller="User" asp-action="Index">Volver</a>


            </div>


        </div>


    </div>
